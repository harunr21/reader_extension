{
  "manifest_version": 3,
  "name": "Focus Reader",
  "version": "1.0",
  "description": "Hide distracting elements on a webpage to focus on reading.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Reader"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
